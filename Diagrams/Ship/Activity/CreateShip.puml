@startuml
title Ship Creation Process

start

-> IConfigurable;

partition "Factory" {
    : Make()|
    -> ship configuration
    (cfg : IConfigurable);
}

partition Ship {
    : new Ship()|
    -> cfg.components;
    : cfg.Aggregate(cfg.components)|
    -> ship attributes;
    repeat
        if (is it size?) then (no)
            if (component has the attribute?) then (yes)
                : ship attribute += component attribute]
            endif
        endif
    repeat while (more ship attribute?) is (yes)
}

end

@enduml